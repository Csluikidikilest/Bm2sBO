@model Bm2sBO.Models.ArticleModel

@using Bm2sBO.Utils;

@{
  ViewBag.Title = "Articles";
}

<div data-ng-controller="Article">
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Code</th>
                <th>Designation</th>
                <th>Date</th>
                <th>Family</th>
                <th>Sub family</th>
                <th>Brand</th>
                <th>Unit</th>
            </tr>
        </thead>
        <tbody>
            <tr data-ng-repeat="Article in Articles">
                <td>{{Article.Code}}</td>
                <td>{{Article.Designation}}</td>
                <td>{{Article.StartingDate}}</td>
                <td>{{Article.ArticleFamily.Designation}}</td>
                <td>{{Article.ArticleSubFamily.Designation}}</td>
                <td>{{Article.Brand.Name}}</td>
                <td>{{Article.Unit.Name}}</td>
            </tr>
        </tbody>
    </table>
</div>

<script type="text/javascript">
    var articles = @Model.Articles.Response.ToHtmlJson();
</script>