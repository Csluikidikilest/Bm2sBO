@using Bm2sBO.Utils;

<div data-ng-controller="Preferences">
  <div id="modalPreferences" class="modal fade" tabindex="-1" role="dialog">
    <form data-ng-submit="savePreferences()">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">@Html.TranslationLabelFor("homepage", "preferences", "Preferences")</h4>
          </div>
          <div class="modal-body">
            <form class="form-horizontal">
              <div class="form-group col-xs-12" data-ng-class="{ 'has-error': !ValidLastName }">
                <label class="control-label text-right">@Html.TranslationFor("homepage", "lastname", "Last name")</label>
                <input name="currentUserLastName" type="text" class="form-control" data-ng-model="CurrentUser.LastName" data-ng-required="true" tabindex="0" />
              </div>
              <div class="form-group col-xs-12">
                <label class="control-label text-right">@Html.TranslationFor("homepage", "firstname", "First name")</label>
                <input name="currentUserFirstName" type="text" class="form-control" data-ng-model="CurrentUser.FirstName" data-ng-required="true" tabindex="0" />
              </div>
              <div class="form-group col-xs-12" data-ng-class="{ 'has-error': !ValidLastName }">
                <label class="control-label text-right">@Html.TranslationFor("homepage", "language", "Language")</label>
                <input name="currentUserLanguage" type="text" class="form-control" data-ng-model="CurrentUser.Language" data-ng-required="true" tabindex="0" />
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <div class="form-group pull-right">
              <div class="input-group">
                <button class="btn btn-default" data-dismiss="modal" data-ng-click="savePreferences()" data-ng-disabled="!formValid()">
                  <i class="fa fa-sign-in"></i>@Html.TranslationLabelFor("homepage", "save", "Save")
                </button>
              </div>
            </div>
            <div class="form-group pull-left">
              <button class="btn" data-dismiss="modal">
                <i class="fa fa-times"></i>@Html.TranslationLabelFor("homepage", "cancel", "Cancel")
              </button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
<script type="text/javascript">
  var selectLanguages = @SelectListUtils.SelectListBrand;
</script>