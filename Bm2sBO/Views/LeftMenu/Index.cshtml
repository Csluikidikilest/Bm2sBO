@model Bm2sBO.Models.LeftMenuModel

@using Bm2sBO.Utils;

<aside id="LeftMenuBar" class="main-sidebar">
  <section class="sidebar">
    <ul class="sidebar-menu">
      @if (UserUtils.CanViewDashboard)
      {
        <li class="treeview">
          <a href="#">
            <i class="fa fa-tachometer"></i> <span>@Html.TranslationFor("menu", "dashboard", "Dashboard")</span> <i class="fa fa-angle-left pull-right"></i>
          </a>
          <ul class="treeview-menu">
            <li><a href="/Dashboard/Dashboard"><i class="fa fa-tachometer"></i> @Html.TranslationFor("menu", "dashboard", "Dashboard")</a></li>
          </ul>
        </li>}
      @if (UserUtils.CanListArticles || UserUtils.CanListFamilies || UserUtils.CanListSubFamilies || UserUtils.CanListBrands || UserUtils.CanListNomenclatures || UserUtils.CanListPrices || UserUtils.CanListSubscriptions)
      {
        <li class="treeview">
          <a href="#">
            <i class="fa fa-product-hunt"></i> <span>@Html.TranslationFor("menu", "articles", "Articles")</span> <i class="fa fa-angle-left pull-right"></i>
          </a>
          <ul class="treeview-menu">
            @if (UserUtils.CanListArticles)
            {
              <li><a href="/Articles/Articles"><i class="fa fa-search"></i> @Html.TranslationFor("menu", "articles", "Articles")</a></li>}
            @if (UserUtils.CanListFamilies)
            {
              <li><a href="/Articles/Families"><i class="fa fa-plus-circle"></i> @Html.TranslationFor("menu", "families", "Families")</a></li>}
            @if (UserUtils.CanListSubFamilies)
            {
              <li><a href="/Articles/SubFamilies"><i class="fa fa-plus-circle"></i> @Html.TranslationFor("menu", "subfamilies", "SubFamilies")</a></li>}
            @if (UserUtils.CanListBrands)
            {
              <li><a href="/Articles/Brand"><i class="fa fa-plus-circle"></i> @Html.TranslationFor("menu", "brand", "Brand")</a></li>}
            @if (UserUtils.CanListNomenclatures)
            {
              <li><a href="/Articles/Nomenclature"><i class="fa fa-plus-circle"></i> @Html.TranslationFor("menu", "nomenclature", "Nomenclature")</a></li>}
            @if (UserUtils.CanListPrices)
            {
              <li><a href="/Articles/Prices"><i class="fa fa-plus-circle"></i> @Html.TranslationFor("menu", "prices", "Prices")</a></li>}
            @if (UserUtils.CanListSubscriptions)
            {
              <li><a href="/Articles/Subscriptions"><i class="fa fa-plus-circle"></i> @Html.TranslationFor("menu", "subscriptions", "Subscriptions")</a></li>}
          </ul>
        </li>}
      @if (UserUtils.CanListPartners)
      {
        <li class="treeview">
          <a href="#">
            <i class="fa fa-user-secret"></i> <span>@Html.TranslationFor("menu", "partners", "Partners")</span> <i class="fa fa-angle-left pull-right"></i>
          </a>
          <ul class="treeview-menu">
            <li><a href="/Partners/Partners"><i class="fa fa-user-secret"></i> @Html.TranslationFor("menu", "partners", "Partners")</a></li>
          </ul>
        </li>}
      @if (UserUtils.CanListSales || UserUtils.CanListPurchases)
      {
        <li class="treeview">
          <a href="#">
            <i class="fa fa-money"></i> <span>@Html.TranslationFor("menu", "trades", "Trades")</span> <i class="fa fa-angle-left pull-right"></i>
          </a>
          <ul class="treeview-menu">
            @if (UserUtils.CanListSales)
            {
              <li>
                <a href="/Trades/Sales">
                  <span class="fa-stack fa-lg">
                    <i class="fa fa-shopping-cart"></i>
                    <i class="fa fa-caret-right"></i>
                  </span>
                  @Html.TranslationFor("menu", "sales", "Sales")
                </a>
              </li>}
            @if (UserUtils.CanListPurchases)
            {
              <li>
                <a href="/Trades/Purchases">
                  <span class="fa-stack fa-lg">
                    <i class="fa fa-caret-right"></i>
                    <i class="fa fa-shopping-cart"></i>
                  </span>
                  @Html.TranslationFor("menu", "purchases", "Purchases")
                </a>
              </li>}
          </ul>
        </li>}
      @if (UserUtils.CanListGroups || UserUtils.CanListUsers || UserUtils.CanListModules)
      {
        <li class="treeview">
          <a href="#">
            <i class="fa fa-users"></i> <span>@Html.TranslationFor("menu", "users", "Users")</span> <i class="fa fa-angle-left pull-right"></i>
          </a>
          <ul class="treeview-menu">
            @if (UserUtils.CanListGroups)
            {
              <li><a href="/Users/Groups"><i class="fa fa-users"></i> @Html.TranslationFor("menu", "groups", "Groups")</a></li>}
            @if (UserUtils.CanListUsers)
            {
              <li><a href="/Users/Users"><i class="fa fa-user"></i> @Html.TranslationFor("menu", "users", "Users")</a></li>}
            @if (UserUtils.CanListModules)
            {
              <li><a href="/Users/Modules"><i class="fa fa-desktop"></i> @Html.TranslationFor("menu", "modules", "Modules")</a></li>}
          </ul>
        </li>}
      @if (UserUtils.CanListParameters || UserUtils.CanListTranslations)
      {
        <li class="treeview">
          <a href="#">
            <i class="fa fa-cog"></i> <span>@Html.TranslationFor("menu", "parameters", "Parameters")</span> <i class="fa fa-angle-left pull-right"></i>
          </a>
          <ul class="treeview-menu">
            @if (UserUtils.CanListParameters)
            {
              <li><a href="/Parameters/Parameters"><i class="fa fa-cog"></i> @Html.TranslationFor("menu", "parameters", "Parameters")</a></li>}
            @if (UserUtils.CanListTranslations)
            {
              <li><a href="/Parameters/Translations"><i class="fa fa-flag"></i> @Html.TranslationFor("menu", "translations", "Translations")</a></li>}
          </ul>
        </li>}
    </ul>
  </section>
</aside>
