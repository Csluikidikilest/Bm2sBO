@using Bm2sBO.Utils;
@if (!UserUtils.CurrentUser.IsAdministrator)
{
  <script type="text/javascript">
    window.location = "/";
  </script>
}

<section class="content">
  <div class="row">
    <div class="col-lg-4 col-md-6" data-ng-controller="Initialization">
      <div class="box">
        <div class="box-header">
          <h3 class="pull-left">@Html.TranslationFor("initialization", "titlemodules", "Initialization of modules")</h3>
        </div>
        <div class="box-body">
          @Html.TranslationFor("initialization", "descriptionmodules", "The purpose of this button is to initialize differents modules in bm2s.<br/>Once clicked, you can manually edit modules to active/unactive them.")
        </div>
        <div class="box-footer">
          <div class="form-group pull-right">
            <button class="btn btn-default" data-ng-click="ModulesInitialization()" tabindex="0" data-ng-disabled="!NeedModulesInitialization">
              <i class="fa fa-check"></i> @Html.TranslationLabelFor("initialization", "button", "Initialization")
            </button>
          </div>
        </div>
        <div class="overlay" data-ng-show="Loading">
          <i class="fa fa-4x fa-refresh fa-spin"></i>
        </div>
      </div>
    </div>
    <div class="col-lg-8 col-md-6" data-ng-controller="Setup">
      <div class="box">
        <div class="box-header">
          <h3 class="pull-left">@Html.TranslationFor("setup", "titlemodules", "Setup")</h3>
        </div>
        <div class="box-body">
          <div class="col-sm-12">
            <table class="table table-striped table-condensed table-bordered">
              <thead>
                <tr>
                  <th class="col-sm-10">@Html.TranslationFor("setup", "columnheaderoptions", "Options")</th>
                  <th class="col-sm-1">&nbsp;</th>
                  <th class="col-sm-1">&nbsp;</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>@Html.TranslationFor("setup", "partnercontact", "Can partner have contacts?")</td>
                  <td class="form-group text-center"><label class="control-label text-right"><input type="radio" value="true" name="partnercontact" /> @Html.TranslationFor("setup", "yes", "Yes")</label></td>
                  <td class="form-group text-center"><label class="control-label text-right"><input type="radio" value="false" name="partnercontact" /> @Html.TranslationFor("setup", "no", "No")</label></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class="box-footer">
          <div class="form-group pull-right">
            <button class="btn btn-default" data-ng-click="ModulesInitialization()" tabindex="0" data-ng-disabled="!NeedModulesInitialization">
              <i class="fa fa-check"></i> @Html.TranslationLabelFor("setup", "button", "Confirm")
            </button>
          </div>
        </div>
        <div class="overlay" data-ng-show="Loading">
          <i class="fa fa-4x fa-refresh fa-spin"></i>
        </div>
      </div>
    </div>
  </div>
</section>

<script type="text/javascript">
  var needModulesInitialization = @ModuleUtils.NeedModulesInitialization.ToString().ToLower();
</script>
