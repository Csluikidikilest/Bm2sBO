@model Bm2sBO.Areas.Parameters.Models.TranslationsModel

@using Bm2sBO.Utils;

@{
  ViewBag.Title = "Translations";
}

<div class="box" data-ng-controller="Translation">
  <div class="box-header">
    <h3>@Html.TranslationFor("listtranslations", "title", "Title")</h3>
  </div>
  <div class="box-body">
    <div class="row">
      <div class="col-sm-12">

        <table class="table table-striped table-condensed">
          <thead>
            <tr>
              <th>@Html.TranslationFor("listtranslations", "screen", "Screen")</th>
              <th>@Html.TranslationFor("listtranslations", "key", "Key")</th>
              <th data-ng-repeat="Language in Languages">{{Language.Name}}</th>
            </tr>
          </thead>
          <tbody>
            <tr data-ng-repeat="Translation in Translations | startFrom:CurrentPage*PageSize | limitTo:PageSize">
              <td>{{Translation.Screen}}</td>
              <td>{{Translation.Key}}</td>
              <td data-ng-repeat="Language in Translation.Languages">{{Language.Translation}}</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-5">
      @Html.TranslationFor("listtranslations", "resultscountpart1", "Showing") {{FirstItem}} @Html.TranslationFor("listtranslations", "resultscountpart2", "to") {{LastItem}} @Html.TranslationFor("listtranslations", "resultscountpart3", "of") {{ItemsCount}} @Html.TranslationFor("listtranslations", "resultscountpart4", "entries")
    </div>
    <div class="col-sm-7">
      <div class="dataTables_paginate paging_simple_numbers">
        <pagination></pagination>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  var languages = @Model.Language.Response.ToHtmlJson();
</script>